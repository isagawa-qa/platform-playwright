{
  "permissions": {
    "allow": [
      "Skill(kernel:*)",
      "WebSearch",
      "Bash(npx @playwright/mcp@latest --help)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/universal-gate-enforcer.py"
          }
        ]
      }
    ]
  }
}
